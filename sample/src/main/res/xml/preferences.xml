<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:title="@string/pref_title">
        <SwitchPreference
            android:key="pref_key_https"
            android:summary="@string/pref_summary_https"
            android:title="@string/pref_title_https"
            android:defaultValue="@string/default_https" />
        <EditTextPreference
            android:key="pref_key_host"
            android:summary="@string/pref_summary_host"
            android:title="@string/pref_title_host"
            android:defaultValue="@string/default_host" />
        <EditTextPreference
            android:key="pref_key_username"
            android:summary="@string/pref_summary_username"
            android:title="@string/pref_title_username"
            android:defaultValue="@string/default_user" />
        <EditTextPreference
            android:key="pref_key_password"
            android:summary="@string/pref_summary_password"
            android:title="@string/pref_title_password"
            android:defaultValue="@string/default_password" />
        <EditTextPreference
            android:key="pref_key_dbname"
            android:summary="@string/pref_summary_dbname"
            android:title="@string/pref_title_dbname"
            android:defaultValue="@string/default_dbname"  />
    </PreferenceCategory>

</PreferenceScreen>